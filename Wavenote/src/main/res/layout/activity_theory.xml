<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="7"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <TextView
                    android:id="@+id/photo_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/custom_vertical_space"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/chords"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/custom_vertical_space"
                    android:paddingBottom="@dimen/custom_vertical_space"
                    android:textColorHint="?attr/noteEditorTextColor" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="-1dp"
                android:background="@color/dividerColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:paddingLeft="@dimen/custom_horizontal_space"
                android:paddingRight="@dimen/custom_horizontal_space"
                android:layout_marginTop="@dimen/custom_vertical_space"
                android:layout_marginBottom="@dimen/custom_vertical_space">

                <Button
                    android:id="@+id/guitar_chords"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/guitar"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:letterSpacing="0"
                    android:onClick="startChordsActivity"
                    app:strokeColor="@color/blue"
                    app:strokeWidth="2dp"
                    tools:ignore="PrivateResource" />

                <Button
                    android:id="@+id/piano_chords"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/custom_horizontal_space"
                    android:layout_marginRight="@dimen/custom_horizontal_space"
                    android:orientation="vertical"
                    android:text="@string/piano"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:letterSpacing="0"
                    android:onClick="startChordsActivity"
                    app:strokeColor="@color/blue"
                    app:strokeWidth="2dp"
                    tools:ignore="PrivateResource" />

                <Button
                    android:id="@+id/ukulele_chords"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/ukulele"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:letterSpacing="0"
                    android:onClick="startChordsActivity"
                    app:strokeColor="@color/blue"
                    app:strokeWidth="2dp"
                    tools:ignore="PrivateResource" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="-1dp"
                android:background="@color/dividerColor" />

            <ListView
                android:id="@+id/photos_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:fontFamily="sans-serif-medium"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:focusable="true"
                tools:listitem="@layout/photo_item"
                tools:ignore="MissingConstraints">
            </ListView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@android:id/empty"
        layout="@layout/empty_view"
        android:visibility="gone" />

    <View
        android:id="@+id/divider_line"
        android:layout_width="@dimen/divider_height"
        android:layout_height="fill_parent"
        android:layout_gravity="end"
        android:background="?attr/dividerColor"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

</LinearLayout>