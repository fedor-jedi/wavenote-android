<?xml version="1.0" encoding="utf-8"?>

<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape
            android:shape="oval">

            <solid
                android:color="@color/red">
            </solid>

            <size
                android:width="@dimen/share_icon_size"
                android:height="@dimen/share_icon_size" />

        </shape>

    </item>

    <item
        android:bottom="@dimen/padding_small"
        android:drawable="@drawable/ic_unpublish_24dp"
        android:right="@dimen/padding_small"
        android:left="@dimen/padding_small"
        android:top="@dimen/padding_small"
        android:gravity="center">
    </item>

</layer-list>
